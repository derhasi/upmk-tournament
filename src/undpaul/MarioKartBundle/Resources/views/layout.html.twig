{% extends '::base.html.twig' %}

{% block title %}
  {{ block('page_title')|striptags }} | undpaul MarioKart
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet"
        href="{{ asset('bundles/undpaulmariokart/css/normalize.css') }}"/>
  <link rel="stylesheet"
        href="{{ asset('bundles/undpaulmariokart/css/style.css') }}"/>
{% endblock %}

{% block body %}
  <div class="breadcrumbs">
  {% block breadcrumbs %}
    <a href="{{ path('upmk_homepage') }}">Home</a>
  {% endblock %}
  </div>

  <h1>{% block page_title %} undpaul MarioKart {% endblock %}</h1>

  {# Print messages provided via flashbag. #}
  {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
      {{ flashMessage }}
    </div>
  {% endfor %}

  <div class="content">
    {% block content %}{% endblock %}
  </div>
{% endblock %}
