{% extends 'undpaulMarioKartBundle::layout.html.twig' %}

{% block breadcrumbs %}
  {{ parent() }}
  <a href="{{ path('upmk_tournament_index') }}">
    Tournaments
  </a>
  <a href="{{ path('upmk_tournament_view', { 'tournament_id': round.tournament.id}) }}">
    {{ round.tournament.name }}
  </a>
{% endblock %}

{% block page_title %}
  {{ round.getFullName() }}
{% endblock %}

{% block content %}

  {% for game in round.games %}
    {{ render(controller('undpaulMarioKartBundle:Game:viewFull', {'game': game, 'titleTag': 'h3' })) }}
  {% endfor %}

  <h3>Ranking</h3>
  {% include "undpaulMarioKartBundle:Round:ranking.html.twig" %}

  <a  class="action action--remove" href="{{ path('upmk_round_remove', {'round_id': round.id}) }}">Delete round</a>
{% endblock %}